{% extends 'base.html.twig' %}
{% block title %}Inscription
{% endblock %}
{% block body %}
	{{form_start(form)}}
	<style>
		body {
			margin: 0;
			padding: 0;
			background-image: url('{{ asset('img/biens/img2.jpg')}}');
			height: 100vh;
		}
		.container #login-row #login-column #login-box {
			margin-top: 50px;
			max-width: 600px;
			height: 450px;
			border: 1px solid #9C9C9C;
			background-image: url('{{ asset('img/biens/img2.jpg')}}')
		}
		.container #login-row #login-column #login-box {
			padding: 20px;
			background-color: #fafafa;
		}
		.container #login-row #login-column #login-box #login-form #register-link {
			margin-top: -85px;
		}
	</style>
	<div id="login" class="row justify-content-center align-items-center">
		<div id="login-row" class="col-md-6">
			<div id="login-column" class="col-md-12">
				<div id="login-box" class="myform form">
					<div class="logo mb-3">
						<div class="col-md-12 text-center">
							<h1>Incription</h1>
						</div>
						<div class="form-group">
							{{form_row(form.userName, {'label':'Nom d\utilisateur ', 'attr':{'placeholder':'Prenom et nom'}}) }}
						</div>
						<div class="form-group">
							{{form_row(form.email, {'label':'Email ', 'attr':{'placeholder':'Adresse email'}}) }}
						</div>
						<div class="form-group">
							{{form_row(form.password, {'label':'Mot de passe ', 'attr':{'placeholder':'Mot de passe !'}})}}
						</div>
						<div class="form-group">
							{{form_row(form.confirm_password, {'label':'Confirmation du mot de passe ', 'attr':{'placeholder':'Rétetez votre mot de passe'}})}}
						</div>
						<div class="ol-md-4 text-center">
							<button class="btn btn-block mybtn btn-primary tx-tfm" href="{{ path('inscription')}}">Inscription</button>
						</div>
						<br>
						<div class="form-group">
							<p class="text-center">Vous avez déja un compte?
								<a href="{{ path('connexion') }}">Identifiez-vous ici</a>
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	{{form_end(form)}}
{% endblock %}
