{% extends "base.html.twig" %}

{% block body %}
	<style>
		body {
			margin: 0;
			padding: 0;
			background-image: url('{{ asset('img/biens/img2.jpg')}}');
			height: 100vh;
		}
		.container #login-row #login-column #login-box {
			margin-top: 50px;
			max-width: 600px;
			height: 320px;
			border: 1px solid #9C9C9C;
			background-image: url('{{ asset('img/biens/img2.jpg')}}')
		}
		#login .container #login-row #login-column #login-box #login-form {
			padding: 20px;
			background-color: #fafafa;
		}
		.container #login-row #login-column #login-box #login-form #register-link {
			margin-top: -85px;
		}
	</style>
	<div id="login" class="row justify-content-center align-items-center">
		<div id="login-row" class="col-md-6">
			<div id="login-column" class="col-md-12">
				<div id="login-box" class="myform form ">
					<div class="logo mb-3">
						<div class="col-md-12 text-center">
							<h1>Connexion</h1>
						</div>
					</div>
					<form id="login-form" class="form" action="{{ path('connexion') }}" method="post">
						<div class="class=" form-group"">
							<label for="InputEmail">Email address</label>
							<input id="username" placeholder="Adresse email ..." required name="_username" type="text" class="form-control">
						</div>
						<div class="form-group">
							<label for="InputPassword">Mot de passe</label>
							<input id="password" placeholder="Mot de passe ..." required name="_password" type="password" class="form-control">
						</div>
						<br>
						<div class="form-group">
							<button type="submit" class="btn btn-block mybtn btn-primary tx-tfm">Connexion</button>
						</div>
						<br>
						<div class="form-group">
							<p class="text-center">Vous n'avez pas de compte?
								<a href="{{ path('inscription') }}" id="signup">Inscrivez-vous ici</a>
							</p>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
